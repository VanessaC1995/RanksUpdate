<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanessa.badmintonapplication.Info">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="Club Information"
            android:textColor="#000080"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Club Contacts"
            android:textColor="#000080"
            android:textSize="30dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:text="Coach - Ciaran Chambers"
            android:textColor="#696970"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="11dp"
            android:text="Email"
            android:textColor="#000080"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="12dp"
            android:text="uujbadders123@gmail.com"
            android:textColor="#696970"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Training Times"
            android:textColor="#000080"
            android:textSize="30dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday 5:30-7PM"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textColor="#696970"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday 5-6PM"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textColor="#696970"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#696970"
            android:text="Sports Hall 1"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/textView3"
            android:orientation="horizontal"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/facebook"
                android:background="@null"
                android:layout_gravity="center_horizontal"/>


            <ImageButton
                android:id="@+id/btnTwitter"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/twitter"
                android:layout_marginLeft="20dp"/>

            <ImageButton
                android:id="@+id/btnUUSU"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.46"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/uusu"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
